---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import AIAssistant from '../components/chatbot/AIAssistant'; // <-- 1. IMPORTAR EL NUEVO COMPONENTE
import { ViewTransitions } from "astro:transitions";
import '../styles/globals.css'; 

const { 
  title = 'Ocelotl Sistem | Soluciones TI', 
  description = 'Desarrollo de software seguro y escalable para tu negocio',
  image = '/images/social/default-social.png'
} = Astro.props;

const canonicalURL = Astro.site 
  ? new URL(Astro.url.pathname, Astro.site)
  : undefined;
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <title>{title}</title>
  <meta name="description" content={description} />
  
  {canonicalURL && <link rel="canonical" href={canonicalURL.href} />}
  
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  {Astro.site && <meta property="og:image" content={new URL(image, Astro.site)} />}
  {canonicalURL && <meta property="og:url" content={canonicalURL.href} />}
  <meta property="og:type" content="website" />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
<ViewTransitions />
</head>

<body class="bg-light text-gray-800 font-sans antialiased">
  <Header />
  
  <main>
    <slot />
  </main>
  
  <Footer />
   <AIAssistant client:load />
</body>
</html>