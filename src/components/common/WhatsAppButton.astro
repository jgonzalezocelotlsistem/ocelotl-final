---
// La lógica para crear el enlace se queda exactamente igual.
// Asegúrate de que tu número de teléfono aquí sea el correcto.
const phoneNumber = "5215580107225";
const defaultMessage = "Hola, visité su sitio web y me gustaría obtener más información.";
const encodedMessage = encodeURIComponent(defaultMessage);
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Contactar por WhatsApp"
  class="group fixed bottom-6 right-6 z-50 flex items-center"
>
  <div 
    class="
      absolute right-full mr-4 
      px-4 py-2 
      bg-gray-800 text-white text-sm font-semibold 
      rounded-lg shadow-lg 
      opacity-0 group-hover:opacity-100 
      transition-opacity duration-300 
      whitespace-nowrap
    "
  >
    ¿Necesitas ayuda?
  </div>

  <div 
    class="
      w-16 h-16 bg-green-500 rounded-full shadow-lg 
      flex items-center justify-center 
      hover:bg-green-600 group-hover:scale-110 active:scale-95 
      transition-all duration-300
    "
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-9 h-9 text-white"
      viewBox="0 0 24 24"
      fill="currentColor"
    >
