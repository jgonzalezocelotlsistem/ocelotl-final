---
// La definición de los datos se mantiene igual, pero he acortado un texto para que quepa mejor.
const contactInfo = [
  {
    label: 'Correo Electrónico',
    value: 'contacto@ocelotlsistem.com',
    href: 'mailto:contacto@ocelotlsistem.com',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>`
  },
  {
    label: 'Teléfono',
    value: '+52 55 1234 5678',
    href: 'tel:+525512345678',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>`
  },
  {
    label: 'Ubicación',
    value: 'Av. Reforma 123, CDMX', // Texto acortado
    href: '#mapa',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>`
  }
];
---
<div>
  <h2 class="text-3xl font-bold text-primary mb-2">Información Directa</h2>
  <p class="text-gray-600 mb-8">Estamos disponibles a través de los siguientes canales.</p>
  
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    {contactInfo.map(item => (
      <a 
        href={item.href} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="block bg-white p-6 rounded-xl shadow-md border border-transparent hover:border-secondary hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
      >
        <div class="text-secondary mx-auto mb-4 w-12 h-12 flex items-center justify-center bg-secondary/10 rounded-full">
          <Fragment set:html={item.icon} />
        </div>
        <div class="text-center">
          <h3 class="font-bold text-primary mb-1">{item.label}</h3>
          <p class="text-gray-600 text-sm break-words">{item.value}</p>
        </div>
      </a>
    ))}
  </div>
</div>